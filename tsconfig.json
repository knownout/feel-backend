{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "paths": {
            "@/*": [ "./src/*" ]
        },
        "types": ["node"],
        "declaration": true,
        "typeRoots": ["./src/types"],
        "sourceMap": true,
        "outDir": "./dist",
        "sourceRoot": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}
